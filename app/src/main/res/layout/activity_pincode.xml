<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pincode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="guru.pmvungu.example.com.guru.Activity_pincode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        android:angle="45" android:startColor="#FFF" android:endColor="#FFF"

        android:background="@color/orange"
        android:visibility="visible"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Motif . devise"
            android:id="@+id/txtmotifdevise"
            android:textColor="@color/activity_background"
            android:layout_marginTop="61dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/code_pin"
        android:textColor="@color/activity_background"
        android:id="@+id/tvCodepin"
        android:layout_below="@+id/txtmotifdevise"
        android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/code_pin"
        android:textColor="@color/activity_background"
        android:id="@+id/tvTicket"
        android:layout_below="@+id/tvCodepin"
        android:layout_alignStart="@+id/tvCodepin"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/tvCodepin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/code_pin"
        android:textColor="@color/activity_background"
        android:id="@+id/tvTicketb"
        android:layout_below="@+id/tvTicket"
        android:textAlignment="center"
        android:layout_alignStart="@+id/tvTicket"
        android:layout_alignEnd="@+id/tvTicket" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Thanks for your Time \n 2018-09-05"
        android:textColor="@color/violet"
        android:id="@+id/tvwlc"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:maxLines="2"
        android:layout_below="@+id/tvTicketb"
        android:layout_alignStart="@+id/tvTicketb"
        android:layout_alignEnd="@+id/tvTicketb" />


    </RelativeLayout>
</RelativeLayout>
