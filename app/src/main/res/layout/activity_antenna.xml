<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newloginrs">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">

        <View
            android:id="@+id/Linea0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/violet" />

        <TextView
            android:id="@+id/antennamodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linea0"
            android:layout_marginTop="10dp"
            android:text="Antenna Model"
            android:textColor="@color/opaque_red"
            android:textSize="14dp" />

        <AutoCompleteTextView
            android:id="@+id/edtantennamodel"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Linea0"
            android:layout_marginTop="8dp"
            android:hint="Model"
            android:paddingTop="2dp"
            android:textSize="13dp" />
            />

     <!--   <EditText
            android:id="@+id/edtantennamodel"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Linea0"
            android:layout_marginTop="8dp"
            android:hint="Model"
            android:paddingTop="2dp"
            android:textSize="13dp" />
-->
        <ImageView
            android:id="@+id/ivAntmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtantennamodel"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"

            />

        <View
            android:id="@+id/Linea"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ivAntmodel"
            android:background="@color/violet" />


        <TextView
            android:id="@+id/labelafricell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linea"
            android:layout_marginTop="10dp"
            android:text="Antenna Label"
            android:textColor="@color/opaque_red"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edtlabelafricell"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Linea"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:hint="Oui/Non"
            android:paddingTop="2dp"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/ivAntlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtlabelafricell"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />

        <View
            android:id="@+id/Linea1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ivAntlabel"
            android:background="@color/violet" />

        <TextView
            android:id="@+id/ports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linea1"
            android:layout_marginTop="10dp"
            android:text="Paire de Port"
            android:textColor="@color/opaque_red"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edtports"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Linea1"
            android:layout_marginTop="8dp"
            android:hint="0"
            android:paddingTop="2dp"
            android:textSize="13dp" />

<!--
        <LinearLayout
            android:id="@+id/linNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtports">

            <NumberPicker
                android:id="@+id/numberPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"

                />
        </LinearLayout>

        <Button
            android:layout_below="@+id/edtports"
            android:id="@+id/btn_less"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
