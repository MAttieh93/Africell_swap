<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity_synchronize">

    <GridLayout
        android:columnCount="1"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/gridlayout"
        android:visibility="visible">
        <!-- row 1-->
        <android.support.v7.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/rfdataheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Header dfsfs"
                    android:textSize="14dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:layout_rowWeight="1"

            android:visibility="visible"
            app:cardCornerRadius="10dp"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="15dp">

                <EditText
                    android:id="@+id/edtAudited"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edtHeight"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Audited by"
                    android:paddingLeft="10dp"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/edtRigger"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edtHeight"
                    android:layout_below="@+id/edtAudited"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="Rigger"
                    android:paddingLeft="10dp"
                    android:textSize="16sp" />


                <!--  android:prompt=" " -->
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/validateBtnSynchronize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnHeight"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:text="Synchronize" />

    </RelativeLayout>

</LinearLayout>

